<Page
    x:Class="PingTool.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:PingTool.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    KeyDown="Page_KeyDown"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:TextColorConverter x:Key="TextColorConverter" />
    </Page.Resources>

    <Grid Padding="24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

                <RowDefinition Height="200" />

                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  ===== HERO PING CONTROL SECTION =====  -->
            <Border
                Margin="0,0,0,20"
                Padding="24"
                Background="{StaticResource AccentGradientBrush}"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left: Title & Description  -->
                    <StackPanel Margin="0,0,32,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border
                                Width="52"
                                Height="52"
                                Background="White"
                                CornerRadius="12"
                                Opacity="0.2">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="28"
                                    Foreground="White"
                                    Glyph="&#xE968;" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="26"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Ping Legacy" />
                                <TextBlock
                                    FontSize="13"
                                    Foreground="White"
                                    Opacity="0.8"
                                    Text="Network Diagnostic Tool" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!--  Right: Ping Controls (THE MAIN FEATURE)  -->
                    <Border
                        Grid.Column="1"
                        Padding="8"
                        HorizontalAlignment="Right"
                        Background="White"
                        CornerRadius="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <!--  Favorites Dropdown  -->
                            <DropDownButton
                                Padding="12,10"
                                VerticalAlignment="Stretch"
                                ToolTipService.ToolTip="Quick Hosts (Ctrl+F to add)">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="16"
                                        Glyph="&#xE728;" />
                                    <TextBlock FontWeight="SemiBold" Text="Favorites" />
                                </StackPanel>
                                <DropDownButton.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Click="FavoriteItem_Click" Text="8.8.8.8" />
                                        <MenuFlyoutItem Click="FavoriteItem_Click" Text="1.1.1.1" />
                                        <MenuFlyoutItem Click="FavoriteItem_Click" Text="google.com" />
                                        <MenuFlyoutItem Click="FavoriteItem_Click" Text="cloudflare.com" />
                                        <MenuFlyoutSeparator />
                                        <MenuFlyoutItem Click="AddFavorite_Click" Text="Add Current Host">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE710;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>

                            <!--  Host Input  -->
                            <TextBox
                                x:Name="TxtAddress"
                                Width="280"
                                Padding="12,10"
                                VerticalAlignment="Center"
                                FontSize="15"
                                KeyDown="TxtAddress_KeyDown"
                                PlaceholderText="Enter IP address or hostname..."
                                Text="{x:Bind ViewModel.HostNameOrAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <!--  START/STOP Button (Large & Prominent)  -->
                            <Button
                                MinWidth="120"
                                Padding="24,12"
                                Command="{x:Bind ViewModel.StartPingCommand}"
                                CornerRadius="8"
                                Style="{StaticResource AccentButtonStyle}"
                                ToolTipService.ToolTip="Start: F5 | Stop: Esc">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <SymbolIcon Symbol="{x:Bind GetStartStopSymbol(ViewModel.IsPingStarted), Mode=OneWay}" />
                                    <TextBlock
                                        FontSize="15"
                                        FontWeight="Bold"
                                        Text="{x:Bind GetStartStopText(ViewModel.IsPingStarted), Mode=OneWay}" />
                                </StackPanel>
                            </Button>

                            <!--  Quick Actions  -->
                            <StackPanel
                                Margin="8,0,0,0"
                                Orientation="Horizontal"
                                Spacing="4">
                                <Button
                                    Padding="10"
                                    Command="{x:Bind ViewModel.ClearPingCommand}"
                                    Style="{StaticResource IconButtonStyle}"
                                    ToolTipService.ToolTip="Clear (Ctrl+D)">
                                    <FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="16"
                                        Glyph="&#xE74D;" />
                                </Button>
                                <Button
                                    Padding="10"
                                    Command="{x:Bind ViewModel.ExportCommand}"
                                    Style="{StaticResource IconButtonStyle}"
                                    ToolTipService.ToolTip="Export (Ctrl+E)">
                                    <FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="16"
                                        Glyph="&#xE78C;" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!--  ===== NETWORK INFO ROW =====  -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Network Info Card  -->
                <Border Margin="0,0,8,0" Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,12"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Border
                                Width="28"
                                Height="28"
                                Background="{StaticResource AccentGradientBrush}"
                                CornerRadius="6">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="12"
                                    Foreground="White"
                                    Glyph="&#xE968;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Network Info" />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Margin="0,4"
                                FontWeight="SemiBold"
                                Text="IP Address" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="8,4"
                                Text=":" />
                            <StackPanel
                                Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock Margin="0,4" Text="{x:Bind ViewModel.IpAddress, Mode=OneWay}" />
                                <Button
                                    Padding="4"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{x:Bind ViewModel.CopyIpAddressCommand}">
                                    <FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="12"
                                        Glyph="&#xE8C8;" />
                                </Button>
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,4"
                                FontWeight="SemiBold"
                                Text="IPv6" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="8,4"
                                Text=":" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="0,4"
                                MaxWidth="180"
                                FontSize="11"
                                Text="{x:Bind ViewModel.Ipv6Address, Mode=OneWay}"
                                TextTrimming="CharacterEllipsis"
                                ToolTipService.ToolTip="{x:Bind ViewModel.Ipv6Address, Mode=OneWay}" />

                            <TextBlock
                                Grid.Row="2"
                                Margin="0,4"
                                FontWeight="SemiBold"
                                Text="Profile" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="8,4"
                                Text=":" />
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock Margin="0,4" Text="{x:Bind ViewModel.ProfileName, Mode=OneWay}" />
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="14"
                                    Glyph="{x:Bind GetConnectionGlyph(ViewModel.IsWlan), Mode=OneWay}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="3"
                                Margin="0,4"
                                FontWeight="SemiBold"
                                Text="Public IP" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="8,4"
                                Text=":" />
                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="8">
                                <TextBlock Margin="0,4" Text="{x:Bind ViewModel.PublicIp, Mode=OneWay}" />
                                <Button
                                    Padding="4"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{x:Bind ViewModel.CopyPublicIpCommand}">
                                    <FontIcon
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="12"
                                        Glyph="&#xE8C8;" />
                                </Button>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Network Status Visualization  -->
                <Border
                    Grid.Column="1"
                    Margin="8,0"
                    Padding="20,12"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel HorizontalAlignment="Center" Spacing="12">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="Network Status" />

                        <!--  Status Visualization  -->
                        <StackPanel
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="0">
                            <FontIcon
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                FontSize="32"
                                Glyph="&#xEC4E;" />
                            <Border
                                Width="32"
                                Height="2"
                                VerticalAlignment="Center"
                                Background="{ThemeResource TextFillColorSecondaryBrush}" />
                            <StackPanel>
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="22"
                                    Foreground="{x:Bind GetConnectionColor(ViewModel.HasInternetAccess), Mode=OneWay}"
                                    Glyph="{x:Bind GetConnectionGlyph(ViewModel.IsWlan), Mode=OneWay}" />
                                <TextBlock
                                    MaxWidth="70"
                                    HorizontalAlignment="Center"
                                    FontSize="9"
                                    Text="{x:Bind ViewModel.ProfileName, Mode=OneWay}"
                                    TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                            <Border
                                Width="32"
                                Height="2"
                                VerticalAlignment="Center"
                                Background="{ThemeResource TextFillColorSecondaryBrush}" />
                            <FontIcon
                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                FontSize="32"
                                Foreground="{x:Bind GetConnectionColor(ViewModel.HasInternetAccess), Mode=OneWay}"
                                Glyph="&#xE774;" />
                        </StackPanel>

                        <!--  Data Usage Stats  -->
                        <Border
                            Padding="12,8"
                            HorizontalAlignment="Center"
                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                            CornerRadius="8">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <!--  Download  -->
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border
                                        Width="24"
                                        Height="24"
                                        Background="{StaticResource SuccessGradientBrush}"
                                        CornerRadius="6">
                                        <SymbolIcon Foreground="White" Symbol="Download" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="9"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="DOWN" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind ViewModel.TotalReceivedBytes, Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Separator  -->
                                <Border
                                    Width="1"
                                    Height="30"
                                    Background="{ThemeResource TextFillColorTertiaryBrush}" />

                                <!--  Upload  -->
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Border
                                        Width="24"
                                        Height="24"
                                        Padding="4"
                                        Background="{StaticResource AccentGradientBrush}"
                                        CornerRadius="6">
                                        <SymbolIcon Foreground="White" Symbol="Upload" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="9"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="UP" />
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind ViewModel.TotalSentBytes, Mode=OneWay}" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!--  Ping Stats Summary  -->
                <Border
                    Grid.Column="2"
                    Margin="8,0,0,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,12"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Border
                                Width="28"
                                Height="28"
                                Background="{StaticResource SuccessGradientBrush}"
                                CornerRadius="6">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="12"
                                    Foreground="White"
                                    Glyph="&#xE9D9;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Ping Stats" />
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="MIN" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource SuccessBrush}">
                                    <Run Text="{x:Bind ViewModel.MinPing, Mode=OneWay}" /><Run FontSize="10" Text="ms" />
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="MAX" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource ErrorBrush}">
                                    <Run Text="{x:Bind ViewModel.MaxPing, Mode=OneWay}" /><Run FontSize="10" Text="ms" />
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="AVG" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource PrimaryAccentBrush}">
                                    <Run Text="{x:Bind FormatAvg(ViewModel.AvgPing), Mode=OneWay}" /><Run FontSize="10" Text="ms" />
                                </TextBlock>
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="LOSS" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{x:Bind GetLossColor(ViewModel.PacketLoss), Mode=OneWay}">
                                    <Run Text="{x:Bind FormatLoss(ViewModel.PacketLoss), Mode=OneWay}" /><Run FontSize="10" Text="%" />
                                </TextBlock>
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="OK" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource SuccessBrush}"
                                    Text="{x:Bind ViewModel.SuccessCount, Mode=OneWay}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="10"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="FAIL" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource ErrorBrush}"
                                    Text="{x:Bind ViewModel.FailCount, Mode=OneWay}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--  ===== NETWORK ADAPTERS =====  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,0,16"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <StackPanel
                            Margin="0,0,0,12"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Border
                                Width="28"
                                Height="28"
                                Background="{StaticResource InfoGradientBrush}"
                                CornerRadius="6">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="12"
                                    Foreground="White"
                                    Glyph="&#xE839;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Other Network Adapters" />
                        </StackPanel>

                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <GridView
                                MaxHeight="180"
                                ItemsSource="{x:Bind ViewModel.LocalLANCollection, Mode=OneWay}"
                                SelectionMode="None">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid MaximumRowsOrColumns="2" Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            MinWidth="200"
                                            Margin="4"
                                            Padding="12,10"
                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                            CornerRadius="8">
                                            <StackPanel Orientation="Horizontal" Spacing="12">
                                                <FontIcon
                                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                    FontSize="20"
                                                    Foreground="{StaticResource PrimaryAccentBrush}"
                                                    Glyph="&#xE839;" />
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock
                                                        FontSize="13"
                                                        FontWeight="SemiBold"
                                                        Text="{Binding Name}" />
                                                    <TextBlock
                                                        MaxWidth="160"
                                                        FontSize="11"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        Text="{Binding Description}"
                                                        TextTrimming="CharacterEllipsis" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!--  ===== LATENCY GRAPH =====  -->
                <Border
                    Grid.Column="1"
                    Margin="0,0,0,16"
                    Padding="16"
                    Style="{StaticResource ModernCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Margin="0,0,0,8"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Border
                                Width="24"
                                Height="24"
                                Background="{StaticResource AccentGradientBrush}"
                                CornerRadius="6">
                                <FontIcon
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="11"
                                    Foreground="White"
                                    Glyph="&#xE9D9;" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Text="Latency Graph" />
                        </StackPanel>
                        <Canvas
                            x:Name="ChartCanvas"
                            Grid.Row="1"
                            SizeChanged="ChartCanvas_SizeChanged" />
                    </Grid>
                </Border>
            </Grid>
            <!--  ===== PING RESULTS =====  -->
            <Border
                Grid.Row="3"
                MinHeight="200"
                Padding="0"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Padding="16,10"
                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                        CornerRadius="8,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    FontSize="14"
                                    Foreground="{StaticResource PrimaryAccentBrush}"
                                    Glyph="&#xE9D9;" />
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="Ping Results" />
                            </StackPanel>
                            <TextBlock
                                Grid.Column="1"
                                FontSize="11"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="{x:Bind ViewModel.PingCollection.Count, Mode=OneWay}" />
                                <Run Text=" responses" />
                            </TextBlock>
                        </Grid>
                    </Border>

                    <ListView
                        Grid.Row="1"
                        Padding="8"
                        ItemsSource="{x:Bind ViewModel.PingCollection, Mode=OneWay}"
                        SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,1" Padding="10,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Ellipse
                                        Width="6"
                                        Height="6"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Fill="{Binding Time, Converter={StaticResource TextColorConverter}}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontFamily="Cascadia Mono, Consolas"
                                        FontSize="11"
                                        Text="{Binding Response}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel VerticalAlignment="Top" ItemsUpdatingScrollMode="KeepLastItemInView" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind GetEmptyVisibility(ViewModel.PingCollection.Count), Mode=OneWay}">
                        <FontIcon
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="36"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Glyph="&#xE774;" />
                        <TextBlock
                            Margin="0,8,0,4"
                            HorizontalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Text="No ping results yet" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="10"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="Press F5 or click Start to begin" />
                    </StackPanel>
                </Grid>
            </Border>
    </Grid>
</Page>
