<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PingTool.Views.PortScannerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:PingTool.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:TextColorConverter x:Key="TextColorConverter" />
    </Page.Resources>


    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Margin="0,0,0,20" Orientation="Horizontal" Spacing="12">
            <Border
                Width="40"
                Height="40"
                Background="{StaticResource WarningGradientBrush}"
                CornerRadius="8">
                <FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="18"
                    Foreground="White"
                    Glyph="&#xE946;" />
            </Border>
            <StackPanel VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="Port Scanner" />
                    <Border
                        Padding="8,4"
                        VerticalAlignment="Center"
                        Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                        CornerRadius="4">
                        <TextBlock
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource SystemFillColorCautionBrush}"
                            Text="AUTHORIZED USE ONLY" />
                    </Border>
                </StackPanel>
                <TextBlock
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Check which ports are open on a target host" />
            </StackPanel>
        </StackPanel>

        <!-- Legal Disclaimer -->
        <Border
            x:Name="DisclaimerPanel"
            Grid.Row="1"
            Margin="0,0,0,16"
            Padding="16"
            Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
            CornerRadius="8">
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="20"
                        Foreground="{ThemeResource SystemFillColorCautionBrush}"
                        Glyph="&#xE7BA;" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemFillColorCautionBrush}"
                        Text="Legal Notice - Please Read" />
                </StackPanel>
                <TextBlock TextWrapping="Wrap">
                    <Run FontWeight="SemiBold">Port scanning should only be performed on systems you own or have explicit written authorization to scan.</Run>
                    <LineBreak /><LineBreak />
                    Unauthorized port scanning may violate computer crime laws in many jurisdictions, including but not limited to:
                    <LineBreak />• Computer Fraud and Abuse Act (USA)
                    <LineBreak />• Computer Misuse Act (UK)
                    <LineBreak />• Similar laws in other countries
                    <LineBreak /><LineBreak />
                    By clicking "I Accept", you confirm that:
                    <LineBreak />• You have authorization to scan the target system
                    <LineBreak />• You accept full legal responsibility for your actions
                    <LineBreak />• You will not use this tool for malicious purposes
                </TextBlock>
                <Button
                    Padding="20,10"
                    Click="AcceptDisclaimer_Click"
                    Content="I Accept - I Have Proper Authorization"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>
        </Border>

        <!-- Scanner Panel (hidden until disclaimer accepted) -->
        <StackPanel
            x:Name="ScannerPanel"
            Grid.Row="1"
            Visibility="Collapsed">
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="400" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="HostInput"
                    PlaceholderText="Enter hostname or IP address..."
                    KeyDown="HostInput_KeyDown" />
                <Button
                    x:Name="ScanButton"
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    Padding="16,8"
                    Click="ScanButton_Click"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            x:Name="ScanButtonIcon"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="14"
                            Glyph="&#xE768;" />
                        <TextBlock x:Name="ScanButtonText" Text="Scan" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Progress -->
            <ProgressBar
                x:Name="ProgressBar"
                Margin="0,0,0,16"
                Maximum="100"
                Visibility="Collapsed" />
        </StackPanel>

        <!-- Results -->
        <Border
            Grid.Row="2"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Stats -->
                <StackPanel
                    x:Name="StatsPanel"
                    Margin="0,0,0,12"
                    Orientation="Horizontal"
                    Spacing="20"
                    Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Ellipse
                            Width="10"
                            Height="10"
                            Fill="Green" />
                        <TextBlock>
                            <Run Text="Open:" FontWeight="SemiBold" />
                            <Run x:Name="OpenCount" Text="0" />
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Ellipse
                            Width="10"
                            Height="10"
                            Fill="Red" />
                        <TextBlock>
                            <Run Text="Closed:" FontWeight="SemiBold" />
                            <Run x:Name="ClosedCount" Text="0" />
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Ellipse
                            Width="10"
                            Height="10"
                            Fill="Orange" />
                        <TextBlock>
                            <Run Text="Filtered:" FontWeight="SemiBold" />
                            <Run x:Name="FilteredCount" Text="0" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Results List -->
                <ListView
                    x:Name="ResultsList"
                    Grid.Row="1"
                    ItemsSource="{x:Bind Results}"
                    SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontFamily="Cascadia Mono, Consolas"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Text="{Binding Port}" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{Binding ServiceName}" />
                                <Border
                                    Grid.Column="2"
                                    Padding="10,4"
                                    HorizontalAlignment="Left"
                                    Background="{Binding IsOpen, Converter={StaticResource TextColorConverter}}"
                                    CornerRadius="4">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="{Binding Status}" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel
                    x:Name="EmptyState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="12">
                    <FontIcon
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="48"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Glyph="&#xE946;" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Enter a host and click Scan to start" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
