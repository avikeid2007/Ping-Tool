<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PingTool.Views.TraceroutePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Margin="0,0,0,20" Orientation="Horizontal" Spacing="12">
            <Border
                Width="40"
                Height="40"
                Background="{StaticResource AccentGradientBrush}"
                CornerRadius="8">
                <FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="18"
                    Foreground="White"
                    Glyph="&#xE8F1;" />
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Traceroute" />
                <TextBlock
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Trace the hop-by-hop path to a destination" />
            </StackPanel>
        </StackPanel>

        <!-- Input Section -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="400" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="HostInput"
                PlaceholderText="Enter hostname or IP address..."
                KeyDown="HostInput_KeyDown" />
            <Button
                x:Name="TraceButton"
                Grid.Column="1"
                Margin="12,0,0,0"
                Padding="16,8"
                Click="TraceButton_Click"
                Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="14"
                        Glyph="&#xE768;" />
                    <TextBlock x:Name="TraceButtonText" Text="Trace" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Results -->
        <Border
            Grid.Row="2"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Progress -->
                <ProgressBar
                    x:Name="ProgressIndicator"
                    Margin="0,0,0,12"
                    IsIndeterminate="True"
                    Visibility="Collapsed" />

                <!-- Results List -->
                <ListView
                    x:Name="ResultsList"
                    Grid.Row="1"
                    ItemsSource="{x:Bind Hops}"
                    SelectionMode="None">
                    <ListView.Header>
                        <Grid
                            Padding="12,8"
                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                            CornerRadius="6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="150" />
                            </Grid.ColumnDefinitions>
                            <TextBlock FontWeight="SemiBold" Text="Hop" />
                            <TextBlock Grid.Column="1" FontWeight="SemiBold" Text="IP Address" />
                            <TextBlock Grid.Column="2" FontWeight="SemiBold" Text="Hostname" />
                            <TextBlock Grid.Column="3" FontWeight="SemiBold" Text="Latency" />
                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    FontFamily="Cascadia Mono, Consolas"
                                    FontWeight="SemiBold"
                                    Text="{Binding HopNumber}" />
                                <TextBlock
                                    Grid.Column="1"
                                    FontFamily="Cascadia Mono, Consolas"
                                    Foreground="{StaticResource PrimaryAccentBrush}"
                                    Text="{Binding IpAddress}" />
                                <TextBlock
                                    Grid.Column="2"
                                    Text="{Binding Hostname}"
                                    TextTrimming="CharacterEllipsis" />
                                <TextBlock
                                    Grid.Column="3"
                                    FontFamily="Cascadia Mono, Consolas"
                                    Text="{Binding LatencyDisplay}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel
                    x:Name="EmptyState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="12">
                    <FontIcon
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        FontSize="48"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Glyph="&#xE8F1;" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Enter a host and click Trace to start" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
