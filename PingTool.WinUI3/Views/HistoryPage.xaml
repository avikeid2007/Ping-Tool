<Page
    x:Class="PingTool.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,24">
            <Border 
                Width="44" Height="44" 
                CornerRadius="10"
                Background="{StaticResource AccentGradientBrush}">
                <FontIcon 
                    FontFamily="{StaticResource SymbolThemeFontFamily}" 
                    Glyph="&#xE81C;" 
                    FontSize="20"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Ping History" FontSize="24" FontWeight="Bold"/>
                <TextBlock 
                    Text="View your previous ping sessions" 
                    FontSize="12" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </StackPanel>

        <!-- History List -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}" Padding="0">
            <Grid>
                <ListView x:Name="HistoryList" Padding="8" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border 
                                Padding="16" 
                                Margin="0,4"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border 
                                        Width="40" Height="40" 
                                        CornerRadius="8"
                                        Background="{StaticResource InfoGradientBrush}"
                                        Margin="0,0,16,0">
                                        <FontIcon 
                                            FontFamily="{StaticResource SymbolThemeFontFamily}" 
                                            Glyph="&#xE968;" 
                                            FontSize="16"
                                            Foreground="White"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding IpAddress}" FontWeight="SemiBold" FontSize="15"/>
                                        <TextBlock 
                                            Text="{Binding Date}" 
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                            FontSize="12"/>
                                    </StackPanel>
                                    
                                    <Button 
                                        Grid.Column="2" 
                                        Content="View" 
                                        Click="ViewDetails_Click" 
                                        Tag="{Binding PingId}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Padding="16,8"
                                        CornerRadius="6"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Empty State -->
                <StackPanel 
                    x:Name="EmptyMessage"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
                    <FontIcon 
                        FontFamily="{StaticResource SymbolThemeFontFamily}" 
                        Glyph="&#xE81C;" 
                        FontSize="48"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                    <TextBlock 
                        Text="No ping history yet" 
                        HorizontalAlignment="Center"
                        Margin="0,12,0,4"
                        FontWeight="SemiBold"/>
                    <TextBlock 
                        Text="Your ping sessions will appear here" 
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
