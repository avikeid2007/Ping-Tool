<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PingTool.Views.MultiPingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:PingTool.Models"
    xmlns:converters="using:PingTool.Converters"
    xmlns:local="using:PingTool.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DoubleToStringConverter x:Key="DoubleToStringConverter" />
    </Page.Resources>

    <Grid Padding="24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <Border
                    Width="44"
                    Height="44"
                    CornerRadius="10"
                    Background="{StaticResource AccentGradientBrush}">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="&#xF0E2;"
                        FontSize="20"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Text="Multi-Ping Monitor"
                        FontSize="24"
                        FontWeight="Bold" />
                    <TextBlock
                        Text="Ping multiple targets simultaneously"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </StackPanel>

            <!-- Start/Stop All Button -->
            <Button
                Grid.Column="1"
                MinWidth="140"
                Padding="20,12"
                Command="{x:Bind ViewModel.ToggleAllCommand}"
                Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon
                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Glyph="{x:Bind GetToggleGlyph(ViewModel.IsAllRunning), Mode=OneWay}"
                        FontSize="16" />
                    <TextBlock
                        Text="{x:Bind GetToggleText(ViewModel.IsAllRunning), Mode=OneWay}"
                        FontWeight="SemiBold" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Add Target Section -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="8">
                    <TextBlock
                        Text="Add Target"
                        FontWeight="SemiBold"
                        FontSize="14" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox
                            x:Name="NewHostInput"
                            Width="300"
                            PlaceholderText="Enter hostname or IP address..."
                            Text="{x:Bind ViewModel.NewHostname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            KeyDown="NewHostInput_KeyDown" />
                        <Button
                            Command="{x:Bind ViewModel.AddTargetCommand}"
                            Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE710;"
                                    FontSize="14" />
                                <TextBlock Text="Add" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Presets -->
                <StackPanel Grid.Column="1" Spacing="8" Margin="24,0">
                    <TextBlock
                        Text="Quick Add Presets"
                        FontWeight="SemiBold"
                        FontSize="14" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.AddPresetCommand}"
                            CommandParameter="dns"
                            ToolTipService.ToolTip="8.8.8.8, 1.1.1.1, 9.9.9.9, OpenDNS">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE968;"
                                    FontSize="12" />
                                <TextBlock Text="DNS Servers" />
                            </StackPanel>
                        </Button>
                        <Button
                            Command="{x:Bind ViewModel.AddPresetCommand}"
                            CommandParameter="popular"
                            ToolTipService.ToolTip="google.com, microsoft.com, github.com, amazon.com">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE774;"
                                    FontSize="12" />
                                <TextBlock Text="Popular Sites" />
                            </StackPanel>
                        </Button>
                        <Button
                            Command="{x:Bind ViewModel.AddPresetCommand}"
                            CommandParameter="cdn"
                            ToolTipService.ToolTip="cloudflare.com, akamai.com, fastly.com">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon
                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                    Glyph="&#xE753;"
                                    FontSize="12" />
                                <TextBlock Text="CDN Providers" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Clear All -->
                <Button
                    Grid.Column="2"
                    VerticalAlignment="Bottom"
                    Command="{x:Bind ViewModel.ClearAllCommand}"
                    ToolTipService.ToolTip="Clear all targets">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Glyph="&#xE74D;"
                            FontSize="12" />
                        <TextBlock Text="Clear All" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Targets Grid -->
        <ScrollViewer Grid.Row="2">
            <ItemsControl ItemsSource="{x:Bind ViewModel.Targets}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid
                            Orientation="Horizontal"
                            MaximumRowsOrColumns="4"
                            ItemWidth="280" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:PingTarget">
                        <Border
                            Margin="0,0,12,12"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock
                                            Text="{x:Bind Hostname}"
                                            FontWeight="Bold"
                                            FontSize="15"
                                            TextTrimming="CharacterEllipsis" />
                                        <TextBlock
                                            Text="{x:Bind IpAddress, Mode=OneWay}"
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>

                                    <!-- Status Indicator -->
                                    <Border
                                        Grid.Column="1"
                                        Width="12"
                                        Height="12"
                                        CornerRadius="6">
                                        <Border.Background>
                                            <SolidColorBrush Color="{x:Bind local:MultiPingPage.GetStatusColor(Status), Mode=OneWay}" />
                                        </Border.Background>
                                    </Border>
                                </Grid>

                                <!-- Large Latency Display -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
                                    <TextBlock
                                        Text="{x:Bind LastPing, Mode=OneWay}"
                                        FontSize="36"
                                        FontWeight="Bold" />
                                    <TextBlock
                                        Text="ms"
                                        FontSize="16"
                                        VerticalAlignment="Bottom"
                                        Margin="4,0,0,8"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>

                                <!-- Stats Row -->
                                <Grid Grid.Row="2" Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock
                                            Text="Avg"
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                        <TextBlock FontSize="13">
                                            <Run Text="{x:Bind AvgPing, Mode=OneWay, Converter={StaticResource DoubleToStringConverter}}" />
                                            <Run Text="ms" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            Text="Loss"
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                        <TextBlock FontSize="13">
                                            <Run Text="{x:Bind PacketLoss, Mode=OneWay, Converter={StaticResource DoubleToStringConverter}}" />
                                            <Run Text="%" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock
                                            Text="Count"
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                        <TextBlock
                                            Text="{x:Bind SuccessCount, Mode=OneWay}"
                                            FontSize="13" />
                                    </StackPanel>
                                </Grid>

                                <!-- Action Buttons -->
                                <Grid Grid.Row="3" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Margin="0,0,4,0"
                                        HorizontalAlignment="Stretch"
                                        Click="ShowDetails_Click"
                                        Tag="{x:Bind}">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                Glyph="&#xE8A5;"
                                                FontSize="12" />
                                            <TextBlock Text="Details" />
                                        </StackPanel>
                                    </Button>
                                    <Button
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        Click="RemoveTarget_Click"
                                        Tag="{x:Bind}">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <FontIcon
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                Glyph="&#xE74D;"
                                                FontSize="12" />
                                            <TextBlock Text="Remove" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{x:Bind GetEmptyVisibility(ViewModel.HasTargets), Mode=OneWay}">
            <FontIcon
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xF0E2;"
                FontSize="48"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
            <TextBlock
                Text="No Targets Added"
                FontSize="18"
                FontWeight="SemiBold"
                Margin="0,16,0,4"
                HorizontalAlignment="Center" />
            <TextBlock
                Text="Add hosts manually or use the preset buttons above"
                FontSize="13"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
